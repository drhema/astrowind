---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText
    tagline="Pricing"
    title="Plans Tailored for Every Need"
    subtitle="Choose the plan that best suits your SEO goals and content needs."
  />

  <!-- Pricing Widget ******************* -->
  <Prices
    title="Our Pricing Plans"
    subtitle="Select the plan that fits your requirements and budget"
    prices={[
      {
        title: 'Free Trial Plan',
        subtitle: 'Start with essential tools for free',
        price: '0',  // Setting price to '0' to indicate free
        period: 'forever',
        items: [
          { description: 'PAA Scraper Tool' },
          { description: 'Webdraft Tool (No AI Rewriting)' },
          { description: 'On-Page SEO Analysis Tool' },
          { description: 'No registration required' },
          { description: 'No AI Tools' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: 'Standard Plan',
        subtitle: 'Ideal for individuals and small businesses',
        price: 49,
        period: 'Per Year',
        items: [
          { description: 'PAA Scraper Tool' },
          { description: 'Webdraft Tool with AI Rewriting' },
          { description: 'On-Page SEO Analysis Tool' },
          { description: 'Topic Clustering Tool' },
          { description: 'AI Rewriting' },
          { description: 'Priority Support' },
          { description: '1 Chrome Browser Access' },
          { description: 'Use Your Own OpenAI API Key' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: 'Pro Plan',
        subtitle: 'Perfect for professionals needing multi-device access',
        price: 74,
        period: 'Per Year',
        items: [
          { description: 'PAA Scraper Tool' },
          { description: 'Webdraft Tool with AI Rewriting' },
          { description: 'On-Page SEO Analysis Tool' },
          { description: 'Topic Clustering Tool' },
          { description: 'AI Rewriting' },
          { description: 'Priority Support' },
          { description: '3 Chrome Browser Access' },
          { description: 'Use Your Own OpenAI API Key' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget **************** -->
  <Features3
    title="Why Choose OnPage.ai?"
    subtitle="Discover the benefits of each plan"
    columns={2}
    items={[
      {
        title: 'Flexible Plans',
        description: 'Three tiers designed to cater to different needs, from beginners to advanced SEO professionals.',
        icon: 'tabler:adjustments',
      },
      {
        title: 'Transparent Pricing',
        description: 'No hidden fees—each plan includes clearly listed features and benefits.',
        icon: 'tabler:eye',
      },
      {
        title: 'Secure Payment',
        description: 'Your payments are processed through secure gateways to protect your financial data.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Immediate Access',
        description: 'Instant access to your plan’s tools and features as soon as you subscribe.',
        icon: 'tabler:clock',
      },
      {
        title: 'Upgrade as Needed',
        description: 'Easily switch to a higher plan to unlock additional features as your needs grow.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Priority Support',
        description: 'Get help from our support team faster with priority support for Standard and Pro plans.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->
  <Steps
    title="How to Subscribe"
    tagline="Simple and straightforward"
    isReversed={true}
    items={[
      { title: 'Select Your Plan', icon: 'tabler:number-1' },
      { title: 'Create an Account', icon: 'tabler:number-2' },
      { title: 'Enter Payment Details', icon: 'tabler:number-3' },
      { title: 'Enjoy OnPage.ai', icon: 'tabler:number-4' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Pricing FAQs"
    subtitle="Common questions about our plans and pricing"
    columns={1}
    items={[
      {
        title: 'Does each plan include customer support?',
        description: 'Yes, all plans include support. Standard and Pro plans receive priority support for faster assistance.',
      },
      {
        title: 'Is there a trial period?',
        description: 'We do not offer a trial period, but our Free Plan allows you to experience key tools without registration.',
      },
      {
        title: 'Can I switch plans at any time?',
        description: 'Absolutely! You can upgrade to a higher plan whenever you need more features.',
      },
      {
        title: 'What payment methods are accepted?',
        description: 'We accept major credit cards and other online payment options for secure and convenient transactions.',
      },
      {
        title: 'Are there any additional fees?',
        description: 'No, the listed price covers all features in each plan. There are no hidden fees.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to Optimize Your SEO?"
    subtitle="Join OnPage.ai and access powerful SEO tools to elevate your content performance."
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: '/',
      },
    ]}
  />
</Layout>
