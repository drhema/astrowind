---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    action="https://n.ju.gy/webhook/onpage_form"
    title="Reach Out to Us!"
    subtitle="For quick answers, check our FAQs. If you need further assistance, our support team is here to help."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this form, you consent to the collection of your information as per our Privacy Policy.',
    }}
    description="Our support team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How Can We Assist You?"
    items={[
      {
        title: 'General Support',
        description: `For help with account management, navigating our site, or general questions, feel free to reach out.`,
      },
      {
        title: 'Sales Inquiries',
        description:
          'Contact us for questions about purchases, customization options, or commercial licensing details.',
      },
      {
        title: 'Technical Assistance',
        description:
          'Need help with installation or experiencing compatibility issues? Our technical team is here to assist.',
      },
      {
        title: 'Phone',
        description: '+965 4105 06XX (WhatsApp)',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'support[@]onpage.ai',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Mu3lnen LLC, Kuwait',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
