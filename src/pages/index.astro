---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Onpage AI SEO Chrome Extension - Former SimilarContent',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
<!-- WebApplication Schema Embedded ******************* -->
<div itemscope itemtype="https://schema.org/WebApplication">
  <meta itemprop="name" content="Onpage.ai SEO Chrome Extension" />
  <meta itemprop="installUrl" content="https://chromewebstore.google.com/detail/onpageai-seo-content-mana/ipeelalodbhkaoplodaaffepgaodpidh" />
  <meta itemprop="applicationCategory" content="SEO" />
  <meta itemprop="description" content="Onpage.ai is a Chrome extension designed for SEO content creation and competitive analysis." />
  <meta itemprop="browserRequirements" content="Google Chrome" />
  
  <!-- Screenshot of the application -->
  <meta itemprop="screenshot" content="https://lh3.googleusercontent.com/l5zUwNmT8rIXRhqd8-ypIvtbpcp-1IHDYacJMZfqZSwCIw_yoRNL7Qb38GtdIMgHwU68u3azDSUjbcP_VNifc9aqhg=s1280-w1280-h800" />
  
  <!-- Features list -->
  <meta itemprop="featureList" content="On-Page SEO Analysis, PAA Content Tool, Webdraft Tool, Topic Clustering & Modeling" />

  <!-- Price information -->
  <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
    <meta itemprop="price" content="0.00" />
    <meta itemprop="priceCurrency" content="USD" />
  </div>

  <!-- Aggregate Rating -->
  <div itemprop="aggregateRating" itemscope itemtype="https://schema.org/AggregateRating">
    <meta itemprop="ratingValue" content="4.7" />
    <meta itemprop="bestRating" content="5" />
  </div>

  <!-- Target Audience -->
  <div itemprop="audience" itemscope itemtype="https://schema.org/BusinessAudience">
    <meta itemprop="audienceType" content="Small businesses" />
  </div>

  <!-- Creator Information -->
  <div itemprop="creator" itemscope itemtype="https://schema.org/Organization">
    <meta itemprop="name" content="Mu3lnen LLC" />
  </div>

  <!-- Additional Details -->
  <div itemprop="about" itemscope itemtype="https://schema.org/Thing">
    <meta itemprop="name" content="SEO Content Creation, Competitive Analysis" />
  </div>
</div>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Add to Chrome',
        href: 'https://chromewebstore.google.com/detail/onpageai-seo-content-mana/ipeelalodbhkaoplodaaffepgaodpidh',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Get a Pro License', href: '/pricing/' },
    ]}
    image={{ src: '~/assets/images/onpage-ai-infographic-fixed.png', alt: 'Onpage.ai more info' }}
  >
    <Fragment slot="title">
      Onpage.ai <span class="hidden xl:inline">SEO Chrome Extension for </span>
<span class="text-accent dark:text-white highlight">SEO Content Creation</span> & Competitive Analysis.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Onpage.ai</span> is a free, AI-powered, and production-ready Chrome extension for SEO analysis and content creation.</span
>
<span class="block mb-1 sm:hidden font-bold text-blue-600">Onpage.ai: Transform your SEO strategy.</span>
Ideal for Digital Marketers, SEO Specialists, Content Creators, Bloggers, and E-commerce Sites.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="The All-in-One SEO Toolkit Features"
    subtitle="What You Get with OnPage.ai Harness the power of our advanced SEO tools, designed to provide a comprehensive SEO solution in a single, easy-to-use extension."
    items={[
      {
        title: 'On-Page SEO Analysis',
        description:
          'Analyze critical SEO metrics, including Page Title, Meta Description, Headings, Text/HTML Ratio, Images and Links Count, and Keyword Density. Gain insights on any webpage and save reports as HTML files for future reference.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Webdraft Tool',
        description:
          'Quickly gather and organize content snippets from across the web. Perfect for content curation and aggregation, similar to Google Keep or Microsoft OneNote.',
        icon: 'tabler:world-www',
      },
      {
        title: 'PAA Content Tool',
        description:
          'Extract Google’s "People Also Ask" questions and answers to fuel content ideation, keyword targeting, and snippet optimization. Rewrite content and generate unique PAA-based content to match user intent and boost SEO rankings.',
        icon: 'tabler:question-mark',
      },
      {
        title: 'Topic Clustering & Modeling',
        description:
          'Visualize SEO strategies with AI-generated topic clusters in mindmap format. Analyze top search results to see key subtopics covered by competitors, enhancing your keyword strategy, SEO alignment, and mobile optimization.',
        icon: 'tabler:list-check',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside Onpage.ai Extension"
    title="From Vision to Execution: Craft Your Competitive Edge!"
    items={[
      {
        title: 'Gain a Competitive Edge in Content Strategy',
        description:
          'Leverage industry-leading features to compile and structure content quickly, giving you a complete view on any topic and a head start in content creation.',
      },
      {
        title: 'Optimized for High Performance and User-Friendliness',
        description:
          'Leverage industry-leading features to compile and structure content quickly, giving you a complete view on any topic and a head start in content creation.',
      },
      {
        title: 'Streamlined for Rapid Note-Taking and Organizing',
        description:
          'The Webdraft Tool’s interface is designed to be intuitive and fast, allowing users to capture, annotate, and categorize content instantly.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Flexible Content Management</h3>
      Tailor OnPage.ai to fit your unique SEO needs, saving time while boosting your digital presence.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Build Authority with Strategic Topic Clustering',
        description: `The Topic Clustering Tool empowers your SEO by structuring content around key themes, helping to establish your site as an authoritative resource in your niche.`,
      },
      {
        title: 'Tailored Topic Modeling',
        description:
          'Leverage AI-driven topic clusters that align with your brand’s focus, saving time and ensuring your content stands out while meeting SEO best practices.',
      },
      {
        title: 'Flexible Content Organization',
