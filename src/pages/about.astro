---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---


<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'OnPage.ai Team Image',
    }}
  >
    <Fragment slot="title">
      Transforming SEO with <br />
      <span class="text-accent dark:text-white highlight">Intelligent Analysis and Insights</span>
    </Fragment>

    <Fragment slot="subtitle">
      At OnPage.ai, we are dedicated to helping businesses, marketers, and SEO professionals unlock their full potential. Our tools empower you with in-depth SEO analysis, content insights, and advanced topic clustering designed to boost your online presence and engagement.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact at a Glance"
    stats={[
      { title: 'Global Users', amount: '8K+' },
      { title: 'SEO Analyses', amount: '12K+' },
      { title: 'Keywords Optimized', amount: '30.5K+' },
      { title: 'PAA Content Generated', amount: '50K+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Core Tools"
    subtitle="Explore the range of tools we provide to streamline your SEO efforts and amplify content performance."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'On-Page SEO Analysis',
        description:
          'Gain insights into SEO metrics such as headings, keyword density, and link structures to optimize your content for maximum visibility.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Webdraft Tool',
        description:
          'Organize and capture content snippets across the web, creating a streamlined repository for topic research and content curation.',
        icon: 'tabler:clipboard-list',
      },
      {
        title: 'PAA Content Tool',
        description:
          'Scrape “People Also Ask” questions from Google to generate relevant content ideas and target long-tail keywords effectively.',
        icon: 'tabler:question-mark',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="We’re driven by values that focus on customer success, innovation, and ethical practices in SEO."
    items={[
      {
        title: 'Customer-Centric Approach',
        description:
          'Our tools and features are crafted with the needs of our users in mind, offering solutions that simplify and enhance SEO tasks.',
      },
      {
        title: 'Continuous Improvement',
        description:
          'We are committed to evolving with the industry and continuously improving our tools based on user feedback and SEO advancements.',
      },
      {
        title: 'Ethical SEO Practices',
        description:
          'OnPage.ai values transparency and honesty in SEO. Our tools are designed to help you create genuine, high-quality content that aligns with search engine best practices.',
      },
    ]}
  />

  <!-- Achievements Widget ****************** -->

  <Steps2
    title="Achievements"
    subtitle="Recognized for our commitment to excellence and innovation in the SEO industry."
    isReversed={true}
    callToAction={{
      text: 'Discover More',
      href: '/achievements',
    }}
    items={[
      {
        title: 'Global Reach',
        description: 'Empowering users worldwide to enhance their SEO strategies and gain competitive insights.',
        icon: 'tabler:globe',
      },
      {
        title: 'Customer Success',
        description:
          'Positive feedback and success stories from our community of users who have seen improvements in their rankings and traffic.',
        icon: 'tabler:thumb-up',
      },
      {
        title: 'Award-Winning Solutions',
        description:
          'Recognized in the industry for providing innovative and reliable SEO tools that make a real difference.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch with Us"
    tagline="We’re here to help"
    columns={2}
    items={[
      {
        title: 'Support',
        description:
          'Our dedicated support team is ready to assist you with any questions or issues you may encounter with our tools.',
        icon: 'tabler:headset',
      },
      {
        title: 'Feedback and Suggestions',
        description:
          'We value your input! Reach out to us to share your ideas and help us continue improving OnPage.ai.',
        icon: 'tabler:message-circle',
      },
    ]}
  />
</Layout>